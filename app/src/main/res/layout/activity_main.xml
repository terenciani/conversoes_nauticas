<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valor"
        android:id="@+id/label_valor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edt_valor"
        android:layout_below="@+id/label_valor"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metros"
        android:id="@+id/btn_metros"
        android:layout_alignTop="@+id/btn_kilomotros"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/label_valor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quilometros"
        android:id="@+id/btn_kilomotros"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/edt_valor"
        android:layout_alignStart="@+id/btn_mterrestres"
        android:layout_alignEnd="@+id/btn_mterrestres" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milhas NÃ¡uticas"
        android:id="@+id/btn_mnauticas"
        android:layout_alignTop="@+id/btn_mterrestres"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/label_valor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milhas Terrestres"
        android:id="@+id/btn_mterrestres"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/btn_kilomotros"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
